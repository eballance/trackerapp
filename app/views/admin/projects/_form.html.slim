= form_for [:admin, @project], html: { id: 'admin-project-form', class: 'form-horizontal' } do |f|

  = render 'layouts/errors', object: @project

  .form-group
    = f.label :name, t('projects.name'), class: 'col-sm-4 control-label'
    .col-sm-4
      = f.text_field :name, class: 'form-control'

  .form-group
    = f.label :users, t('projects.users'), class: 'col-sm-4 control-label'
    .col-sm-4
      = f.collection_select :user_ids, current_account.users.all, :id, :username, { include_blank: true }, { multiple: true, class: 'form-control'}

  .form-group
    .col-sm-offset-4.col-sm-4
      = f.submit t('projects.save'), class: 'btn btn-default'


javascript:
  $(function() {
    new AdminProjectForm($('#admin-project-form'))
  })
