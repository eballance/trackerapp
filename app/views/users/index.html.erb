<%= render "form" %>

<div class="container">
  <table class="table">
    <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Admin</th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.admin %></td>
        <td>
          <div class="pull-right">
            <%= link_to user_path(user), :class => 'btn btn-default btn-sm' do %>
              <span class="glyphicon glyphicon-zoom-in"></span>
              View
            <% end %>
            <%= link_to edit_user_path(user), :class => 'btn btn-default btn-sm' do %>
              <span class="glyphicon glyphicon-pencil"></span>
              Edit
            <% end %>
            <%= link_to user_path(user),
                    method: :delete, data: {confirm: 'Are you sure?'}, :class => 'btn btn-default btn-sm' do %>
              <span class="glyphicon glyphicon-trash"></span>
              Delete
            <% end %>
          </div>
        </td>
      </tr>
    <% end %>
  </table>
</div>
