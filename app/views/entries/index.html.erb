  <body data-target=".navbar">
    <div class="navbar navbar-fixed-top">
      <div class="container">
      </div>
    </div>
    <div class="container">
      <a class="btn" href="/entries/?from=<%= @previous_month.strftime("%m/%d/%Y") %>">
        <span class="icon-backward"></span>
        <%= @previous_month.strftime("%m/%d/%Y") %>
      </a>

      <% if Date.today >= @next_month %>
        <a class="btn right" href="/entries/?from=<%= @next_month.strftime("%m/%d/%Y") %>">
          <%= @next_month.strftime("%m/%d/%Y") %>
          <span class="icon-forward"></span>
        </a>
      <% end %>

      <h2 id="<%= current_user.username %>"><%= current_user.username %> (from <%= @from.strftime("%m/%d/%Y") %>)</h2>

      <table class="table">
        <thead>
        <tr>
          <th>original_id</th>
          <th>time</th>
          <th>at</th>
          <th>description</th>
          <th>exported</th>
        </tr>
        </thead>

        <tbody>
        <% @entries.each do |entry| %>
          <tr>
            <td><%= entry.original_id %></td>
            <td><%= entry.formatted_minutes %></td>
            <td><%= entry.date.strftime("%m/%d/%Y") %></td>
            <td><%= entry.description %></td>
            <td><%= entry.exported %></td>
          </tr>
        <% end %>
        <tr>
          <td>Total:</td>
          <td><strong><%= @total / 60 %>:<%= @total % 60 %></strong></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
        </tbody>
      </table>

      <a class="btn" href="/entries/?from=<%= @previous_month.strftime("%m/%d/%Y") %>">
        <span class="icon-backward"></span>
        <%= @previous_month.strftime("%m/%d/%Y") %>
      </a>

      <% if Date.today >= @next_month %>
        <a class="btn right" href="/entries/?from=<%= @next_month.strftime("%m/%d/%Y") %>">
          <%= @next_month.strftime("%m/%d/%Y") %>
          <span class="icon-forward"></span>
        </a>
      <% end %>
    </div>
  </body>
</html>
