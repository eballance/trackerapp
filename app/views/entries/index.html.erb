  <body data-target=".navbar">

    <div class="container">
      <div "form-group">
        <div class="form-inline">
          <%= form_for @entry do |f| %>
            <% if @entry.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@entry.errors.count, "error") %> prohibited this post from being saved:</h2>

                <ul>
                <% @entry.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
                </ul>
              </div>
            <% end %>
            <%= f.label :time_spent %>
            <% if @entry.try(:time_spent) %>
              <%= f.text_field :time_spent, placeholder: 'e.g. 1:30, 1.5, 90, 1h', :style => "width: 10em;", :value => @entry.time_spent %>
            <% else %>
              <%= f.text_field :time_spent, placeholder: 'e.g. 1:30, 1.5, 90, 1h', :style => "width: 10em;" %>
            <% end %>
            <%= f.label :project_name %>
            <% if @entry.try(:project_name) %>
              <%= f.autocomplete_field :project_name, autocomplete_project_name_entries_path, :value => @entry.project_name %>
            <% else %>
              <%= f.autocomplete_field :project_name, autocomplete_project_name_entries_path, placeholder: 'Type to search...' %>
            <% end %>
            <%= f.label :description %>
            <%= f.text_area :description, :rows => "1"%>
            <%= f.label :date %>
            <%= f.text_field :date, :class => 'datepicker', :value => Date.today.strftime("%d/%m/%Y"), :style => "width: 6em;" %>
            <script type="text/javascript">
            $(function() {
              $('.datepicker').datepicker({
                showButtonPanel: true,
                dateFormat: 'dd/mm/yy',});
              });
            </script>
            <%= f.submit "Add" %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="container">
      <%= render "buttons" %>

      <h2 id="<%= current_user.username %>"><%= current_user.username %> (<%= @from.strftime("%B %Y") %>)</h2>

      <table class="table">
        <thead>
        <tr>
          <th>project</th>
          <th>time</th>
          <th>at</th>
          <th>description</th>
          <th>original_id</th>
          <th>exported</th>
        </tr>
        </thead>

        <tbody>
        <% @entries.each do |entry| %>
          <tr>
            <td><%= entry.project.name %></dt>
            <td><%= entry.formatted_minutes %></td>
            <td><%= entry.date.strftime("%d/%m/%Y") %></td>
            <td><%= entry.description %></td>
            <td><%= entry.original_id %></td>
            <td><%= entry.exported %></td>
          </tr>
        <% end %>
        <tr>
          <td>Total:</td>
          <td><strong><%= @total / 60 %>:<%= @total % 60 %></strong></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
        </tbody>
      </table>

      <%= render "buttons" %>
    </div>
  </body>
</html>
